
import {getAllUsersService,getUserService,UpdateUserService} from '../service/userService'

export default getAllUsersController=async (req,res)=>{

        const users=getAllUsersService();
        res.json(users);

}

export default getUserController=async (req,res)=>{
    
    const user=getUserService(req.params);
    res.json(user);

}


export default getMeController=async (req,res)=>{
    const USER=req.user 
    const user=getUserService(USER);
    res.json(user);

}

export default UpdateUserController(req,res){
    const user=UpdateUserService(req);
    res.json(user);
}


